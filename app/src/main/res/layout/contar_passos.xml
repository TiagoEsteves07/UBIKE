<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_passos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolbar"
        app:title="Contar Passos"/>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/bIniciar"
            android:layout_marginTop="50dp"
            android:textColor="#fff"
            android:background="@drawable/b_login_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ComeÃ§ar atividade"
            android:layout_gravity="center"/>

        <Chronometer
            android:id="@+id/cronometro"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearPassos"
            android:textSize="30dp" />

        <LinearLayout
            android:id="@+id/linearPassos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tpassos"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passos:"
                android:textSize="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/passos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="50dp"
                android:layout_toEndOf="@+id/passos"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </LinearLayout>

        <Button
            android:id="@+id/bTerminar"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:background="@drawable/b_login_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminar Atividade"
            android:layout_gravity="center"/>


    </RelativeLayout>
</LinearLayout>